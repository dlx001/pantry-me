generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GroceryItem {
  id     Int     @unique
  name   String
  brand  String?
  unit   String
  price  String
  listId Int?
  list   List?   @relation(fields: [listId], references: [id])
  store  String
}

model Item {
  id             Int       @id @default(autoincrement())
  code           String?
  name           String
  expirationDate DateTime?
  userId         String
}

model List {
  userId String
  id     Int           @id @default(autoincrement())
  name   String
  items  GroceryItem[]
}
